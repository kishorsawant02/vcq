<div class="container">
	<div class="col-md-4 col-md-offset-4 form-group">
		<h2>Register Today !!!!!!</h2>
	</div>
   <form method="post" action="/users/register">
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-user"></i>
               </span>
               <input id="text" maxlength="12" name="firstName" placeholder="Enter Your First Name" class="form-control input-md" type="text" value="{{firstName}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-user"></i>
               </span>
               <input id="text" maxlength="12" name="lastName" placeholder="Enter Your Last Name" class="form-control input-md" type="text" value="{{lastName}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <label class=>Choose Gender</label>
               </span>
               <span class="input-group-addon">
               <label class="radio-inline"><input required type="radio" name="gender" value="male">Male</label>
               </span>
               <span class="input-group-addon">
               <label class="radio-inline"><input required type="radio" name="gender" value="female">Female</label>
               </span>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-inbox"></i>
               </span>
               <input id="email" maxlength="30" name="email" placeholder="Enter ypur email id" class="form-control input-md ac_email" type="email" value="{{email}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-phone"></i>
               </span>
               <input id="mobile" maxlength="10" name="mobile" placeholder="Enter Your phone number" class="form-control input-md" type="text" value="{{mobile}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-lock"></i>
               </span>
               <input id="password" minlength="5" maxlength="12" name="password" placeholder="Enter Your password" class="form-control input-md" type="password" value="{{password}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-globe"></i>
               </span>
               <input id="text" maxlength="20" name="address" placeholder="Enter your address" class="form-control input-md" type="text" value="{{address}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-globe"></i>
               </span>
               <input id="text" maxlength="15" name="city" class="form-control input-md" placeholder="Enter your city name" type="text" value="{{city}}" required>
            </div>
         </div>
      </div>
      <div class="row form-group">
         <div class="col-md-4 col-md-offset-4">
            <div class="input-group">
               <span class="input-group-addon">
               <i class="glyphicon glyphicon-globe"></i>
               </span>
               <input id="text" maxlength="15" name="state" placeholder="Enter your state name" class="form-control input-md" type="text" value="{{state}}" required>
            </div>
         </div>
      </div>
      <div class="col-md-4 col-md-offset-4">
         <button type="submit" class="btn btn-primary">Submit</button>
      </div>
   </form>
</div>